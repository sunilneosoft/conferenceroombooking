%h2 Log in

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = devise_error_messages!
  .form-group.row
    %label.col-xs-2.col-form-label{:for => "example-text-input"} Email
    .col-xs-6
      = f.email_field :email, autofocus: true, class: "form-control"
  .form-group.row
    %label.col-xs-2.col-form-label{:for => "example-search-input"} Password
    .col-xs-6
      = f.password_field :password, autocomplete: "off", class: "form-control"
  - if devise_mapping.rememberable?
    .form-group.row
      %label.col-xs-2.col-form-label
      .col-xs-6
        = f.check_box :remember_me
        = f.label :remember_me
  .form-group.row
    %label.col-xs-2.col-form-label{:for => "example-text-input"}
    .col-xs-10
      = f.submit "Submit", class: "btn btn-default"
      
= render "devise/shared/links"